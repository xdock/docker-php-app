server {
    error_log /dev/stdout;
    listen 80;
    root /app/public;
    index index.php;

    # Allow for maximum upload size
    client_max_body_size 500M;

    # Cloudflare has a full request header size max of 32k, accommodate that plus 2k for potential proxy headers
    client_header_buffer_size 4k;
    large_client_header_buffers 8 34k;

    # First attempts will be for static files on disk in /app/public
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Directly matched with .php, or via try_files from above (all non existent paths served by php)
    location ~ \.php {
        try_files $uri /index.php?$query_string;
        fastcgi_pass backend;
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_read_timeout 300;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}

upstream backend {
    server unix:/var/run/php-fpm.sock;
}