server {
    access_log off;
    listen 81;

    location /fpm-status {
        fastcgi_pass backend;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    location /fpm-ping {
        fastcgi_pass backend;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}

upstream fpmstatus {
    server unix:/var/run/php-fpm.sock;
}